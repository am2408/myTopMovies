        },
      }],
    });

    let backIcon = document.getElementById('back');
    let animation = bodymovin.loadAnimation({
      container: backIcon,
      path: 'images/back.json',
      renderer: 'svg',
      autoplay: false,
      loop: true,
    });

    $(backIcon).mouseover(() => {
      animation.play();
    });
    $(backIcon).mouseout(() => {
      animation.stop();
    });
